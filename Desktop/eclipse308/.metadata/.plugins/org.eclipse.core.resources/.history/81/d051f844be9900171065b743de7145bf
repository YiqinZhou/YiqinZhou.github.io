    for i in range(10):
        number=random.randint(0,ORF_length-1)
        list_ORF[number]=random_nucleotide(ORF[number])
        new_ORF="".join(list_ORF)
        print "Now the protein sequence by changing random nucleotide is: "+translate(new_ORF)
    
    print " "
    original_protein=translate(ORF) 
    list_protein=list(original_protein)  
    print list_protein[47] 
    for j in range(10):
        number=random.randint(0,len(original_protein)-2)
        print len(list_protein)-2
        list_protein[number]=random_amino_acid(list_protein[number])
        new_protein="".join(list_protein)
        print "Now the protein sequence by changing random amino acid is: "+translate(new_ORF)
    
        
    
        
    
   
    








	
